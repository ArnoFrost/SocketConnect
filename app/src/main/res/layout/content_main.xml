<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.carrobot.android.socketconnect.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/id_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="udp broadcast ip and port..." />


    <LinearLayout
        android:id="@+id/id_ll_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_tv_info">

        <Button
            android:id="@+id/id_btn_send_wireless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="GET WIRELESS DATA" />

        <Button
            android:id="@+id/id_btn_send_wired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_tv_info"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="GET USB DATA" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_ll_send_obd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_ll_send">

        <Button
            android:id="@+id/id_btn_get_speed_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="GET SPEED UNIT" />

        <Button
            android:id="@+id/id_btn_set_mph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="SET MPH" />

        <Button
            android:id="@+id/id_btn_set_kmh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="SET KMH" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/id_ll_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_ll_send_obd">

        <Button

            android:id="@+id/id_btn_get_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_ll_send"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:text="GET VERSION" />


        <Button
            android:id="@+id/id_btn_send_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="TRANSFER FILE" />
    </LinearLayout>


    <Button
        android:id="@+id/id_btn_miracast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_ll_file"
        android:layout_margin="2dp"
        android:text="WIFI CAST" />

    <Button
        android:id="@+id/id_btn_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_btn_miracast"
        android:layout_margin="2dp"
        android:text="测试"
        android:visibility="gone" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/id_btn_test">

        <TextView
            android:id="@+id/id_tv_recevie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tcp Connecting..." />

    </ScrollView>

</RelativeLayout>
